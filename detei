import telebot
from telebot import types
bot = telebot.TeleBot('6968154187:AAE8UgrqL5IvxanIEYArapblE7UDhkE0yzo')

@bot.message_handler(commands=['start'])
def start(message):

    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("—É–∑–Ω–∞—Ç—å –∏–Ω—Ñ—É")
    markup.add(btn1)
    bot.send_message(message.from_user.id, "–Ω—É –ø—Ä–∏–≤–µ—Ç –º—è—Å–Ω–æ–π –º–µ—à–æ–∫üòº, —Ö–æ—á–µ—à—å —è —Ç–µ–±–µ —Ä–∞—Å—Å–∫–∞–∂—É –ø—Ä–æ –î–ï–¢–ï–ô", reply_markup=markup)

@bot.message_handler(content_types=['text'])
def get_text_messages(message):

    if message.text == '—É–∑–Ω–∞—Ç—å –∏–Ω—Ñ—É':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True) #—Å–æ–∑–¥–∞–Ω–∏–µ –Ω–æ–≤—ã—Ö –∫–Ω–æ–ø–æ–∫
        btn1 = types.KeyboardButton('–ø–æ—á–µ–º—É –î–ï–¢–ï–ô —Å—Ç–∞–ª –ø–æ–ø—É–ª—è—Ä–Ω–æ–π –∏–≥—Ä–æ–π?')
        btn2 = types.KeyboardButton('–∫–∞–∫–æ–π –ø–æ –∏—Ç–æ–≥—É —Å—é–∂–µ—Ç?')
        btn3 = types.KeyboardButton('–±—É–¥–µ—Ç –ª–∏ 3–¥ —Ä–µ–º–µ–π–∫?')
        markup.add(btn1, btn2, btn3)
        bot.send_message(message.from_user.id, '—á—Ç–æ —Ç—ã —Ö–æ—á–µ—à—å –∑–Ω–∞—Ç—å –æ —à–µ–¥–µ–≤—Ä–µ –≥–µ–π–º–¥–µ–≤–∞?', reply_markup=markup) #–æ—Ç–≤–µ—Ç –±–æ—Ç–∞


    elif message.text == '–ø–æ—á–µ–º—É –î–ï–¢–ï–ô —Å—Ç–∞–ª –ø–æ–ø—É–ª—è—Ä–Ω–æ–π –∏–≥—Ä–æ–π?':
        bot.send_message(message.from_user.id, '—Ç—ã –Ω–µ –∑–Ω–∞–µ—à—å –î–ï–¢–ï–ô? –≠—Ç–æ –∂–µ –∑–Ω–∞–º–µ–Ω–∏—Ç–∞—è –∏–≥—Ä–∞ –Ω–∞ –ø–∏—Ç–æ–Ω–µ, –æ–Ω–∞ –ª—É—á—à–µ —á–µ–º –≤—Å—è–∫–∏–µ —Ç–∞–º –ì–¢–ê –∏ –†–î–†2 –≤ 100000 —Ä–∞–∑. –ü—Ä–æ–π–¥–∏ –µ–µ, –∏ –≤—Å–µ –ø–æ–π–º–µ—à—å ', parse_mode='Markdown')

    elif message.text == '–∫–∞–∫–æ–π –ø–æ –∏—Ç–æ–≥—É —Å—é–∂–µ—Ç?':
        bot.send_message(message.from_user.id, '—Ç—ã –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π, –Ω–∞ –º–æ–º–µ–Ω—Ç –≤—ã—Ö–æ–¥–∞ –∏–≥—Ä—ã, –≥–µ—Ä–æ–π. –¢—ã –∫—É—à–∞–µ—à—å –¥–µ—Ç–µ–π, –ø–æ—ç—Ç–æ–º—É –∏–≥—Ä–∞ –∏ –Ω–∞–∑—ã–≤–∞–µ—Ç—Å—è –î–ï–¢–ï–ô. –£ —Ç–µ–±—è –µ—Å—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ –∫–æ–Ω—Ü–æ–≤–æ–∫, –≤—Å–µ –∑–∞–≤–∏—Å—è—Ç –æ—Ç —Ç–≤–æ–µ–≥–æ –≤—ã–±–æ—Ä–∞, –Ω–æ –µ—Å—Ç—å –∏ –∫–∞–Ω–æ–Ω–∏—á–Ω–∞—è, –Ω–æ –Ω–∞–º –ø–æ–∫–∞ –Ω–∏—á–µ–≥–æ –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω–æ', parse_mode='Markdown')

    elif message.text == '–±—É–¥–µ—Ç –ª–∏ 3–¥ —Ä–µ–º–µ–π–∫?':
        bot.send_message(message.from_user.id, '—è –Ω–µ –∑–Ω–∞—é, –Ω–æ —Å–∫–æ—Ä–µ–µ –≤—Å–µ–≥–æ, –ø–æ—Å–ª–µ –≤—ã—Ö–æ–¥–∞ –ø–æ–ª–Ω–æ–π 1-–π —á–∞—Å—Ç–∏ —Å –ø–æ–ª–Ω—ã–º —Å—é–∂–µ—Ç–æ–º, —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–∏ –±—É–¥—É—Ç –ø–µ—Ä–µ–¥–µ–ª—ã–≤–∞—Ç—å —Å—é–∂–µ—Ç –∏ –∏–≥—Ä—É –Ω–∞ 3–¥ –¥–≤–∏–∂–æ–∫', parse_mode='Markdown')


bot.polling(none_stop=True, interval=0) #–æ–±—è–∑–∞—Ç–µ–ª—å–Ω–∞—è –¥–ª—è —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞ —á–∞—Å—Ç—å
